<a:PageWrapper>
    <a:Content name="head">
        <style type="text/css">
            .testUnit {
                border-top: 1px solid #999;
                border-left: 1px solid #999;
                border-collapse: collapse;
            }
            .tableHeader, .tableCell {
                padding: 4px;
                border-right: 1px solid #999;
                border-bottom: 1px solid #999;
                margin: 0px;
            }
            .separator {
                border-top:  1px solid #999;
            }
            .mainTitle {

            }
            .h4Style {
                text-transform : capitalize;
                background: #CCC;
            }
            .testLinkList {
                list-style: none;
                margin-left: 0px;
                padding: 1px;
            }
        </style>
    </a:Content>
    <a:Content name="body">
        <a:Form>
            <table>
                <tr>
                    <td valign="top">
                        <b>Objects Available for Validation:</b>
                        <table border="0" cellpadding="2" cellspacing="0">\
                            <tr>
                                <td align="left" class="categoryLinks">Objects</td>
                                <td align="left" class="categoryLinks">Inspectors</td>
                            </tr>
                            <a:For list="$classesWithInspectors" item="$currentClassName">
                                <tr>\
                                    <td align="left" valign="top">\
                                        $currentClassName
                                    </td>
                                    <td>
                                        <a:For list="$inspectorsForCurrentClass" item="$currentInspector">
                                            <a:If ifTrue="$highlightInspector">
                                                <b>
                                                    <a:Hyperlink action="$chooseValidationAction" awname="$inspectorAWName">
                                                        $currentInspector.inspectorName
                                                    </a:Hyperlink><br/>
                                                </b>
                                            <a:Else/>
                                                <a:Hyperlink action="$chooseValidationAction" awname="$inspectorAWName">
                                                    $currentInspector.inspectorName
                                                </a:Hyperlink><br/>
                                            </a:If>
                                        </a:For>
                                    </td>
                                </tr>
                            </a:For>
                        </table>
                    </td>
                    <td valign="top">
                        <h4>Results of Current Inspection</h4><br/>
                        <a:SubmitButton action="$validationAction" awname="AUTOMATION_ADD_VALIDATION" value="Add Validation to Test"/>
                        <a:SubmitButton action="$cancelValidationAction" awname="Cancel.VALIDATION_IGNORE" value="Cancel"/>
                        <table border="1">
                            <a:For list="$parameters" item="$currentParameter">
                                <tr>
                                    <td>$currentParameter.name</td>
                                    <td>$currentParameter.value</td>
                                </tr>
                            </a:For>
                        </table>
                    </td>
                </tr>
            </table>

            <hr/>
            <h4>Section for Selenium Replay</h4>
            <table>
                <tr>
                    <td>Parameter String to Copy to Test</td>
                    <td>
                        <a:TextArea name="ParameterStringToCompare"
                                value="$storeString"
                                awname="AUTOMATION_VALIDATION_READ_STRING"
                                editable="$true">
                        </a:TextArea>
                    </td>
                </tr>
                <tr>
                    <td>Enter Validation String from Replay</td>
                    <td>
                        <a:TextArea name="EnterValidationString"
                                    value="$testStringToValidate"
                                    awname="AUTOMATION_VALIDATION_ENTRY_STRING">

                        </a:TextArea>
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <a:Hyperlink action="$compareAction"
                                awname="AUTOMATION_COMPARE_VALIDATION">
                            Validate
                        </a:Hyperlink>
                    </td>
                </tr>
                <tr>
                    <td>Validation Message:</td>
                    <td>
                        $validationErrors
                    </td>
                </tr>
            </table>
        </a:Form>
    </a:Content>
</a:PageWrapper>
