<a:PageWrapper>
    <a:Content name="head">
        <style type="text/css">
            .testUnit {
                border-top: 1px solid #999;
                border-left: 1px solid #999;
                border-collapse: collapse;
            }
            .tableHeader, .tableCell {
                padding: 4px;
                border-right: 1px solid #999;
                border-bottom: 1px solid #999;
                margin: 0px;
            }
            .separator {
                border-top:  1px solid #999;
            }
            .mainTitle {
                
            }
            .h4Style {
                text-transform : capitalize;
                background: #CCC;
            }
            .testLinkList {
                list-style: none;
                margin-left: 0px;
                padding: 1px;
            }
            .reloadLink {
                background: url("$reloadImageLink") no-repeat 0 50%;
                padding-left: 22px;
            }
            .appLink {
                background: url("$appImageLink") no-repeat 0 50%;
                padding-left: 17px;
            }
        </style>
    </a:Content>
    <a:Content name="body">
        <a:Form>
            <table border="0" cellPadding="2" cellSpacing="0">\
                <tr>
                    <td align="left" class="categoryLinks">\
                        User:
                        <a:TextField></a:TextField>
                    </td>
                    <td align="left" class="categoryLinks">\
                        Current User is xxx
                    </td>
                    <td align="left">\
                    &nbsp;
                    </td>
                    <td align="left" class="categoryLinks">\
                        <a:Hyperlink action="$clearTestContext" >
                            Reset Test Context
                        </a:Hyperlink>
                    </td>
                </tr>
                <tr>
                    <td align="left">\
                    &nbsp;
                    </td>
                </tr>
            </table>
        </a:Form>
        <table border="0" cellpadding="2" cellspacing="0">\
            <tr>\
                <a:For list="$testCategoryList" item="$currentCategory">
                    <td align="left" class="categoryLinks">\
                        <a href="${'#' + currentCategory.getName}" title="$currentCategory.getName">$currentCategory.getName</a>
                    </td>
                </a:For>
            </tr>
        </table>
        <a:For list="$testCategoryList" item="$currentCategory">
            <a class="section1" name="$currentCategory.getName"></a>
            <h4 class="h4Style">$currentCategory.name </h4>
            <a:TestCategoryLinks categoryTestUnits="$categoryTestUnits"
                                 currentTestUnit="$currentTestUnit"
                                 currentTestUnitLink="$currentTestUnitLink"/>
        </a:For>
    </a:Content>
</a:PageWrapper>
