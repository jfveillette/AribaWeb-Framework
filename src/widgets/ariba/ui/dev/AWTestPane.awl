<a:If ifTrue="$isCurrentlyTesting">
<a:RefreshRegion>
    <div id="testBar" class="testBar" onMouseOver="this.className='testBarVis';" onMouseOut="this.className='testBar';">
        <div style="float:left">\
            <w:PopupMenuLink class="hoverLink hoverArrow" style="font:9px Verdana, Arial, Helvetica, sans-serif"
                             menuId="awTestPane" position="this">\
                <b>TA..  </b>\
            </w:PopupMenuLink></div>
    </div>
</a:RefreshRegion>
<w:PopupMenu menuId="awTestPane">
    <a:LazyDiv>
        <!--- Title section -->
        <table border="0" cellspacing="0" cellpadding="0">\
            <tr>\
                <td nowrap="nowrap"
                    align="$languageLeft"
                    class="grayLt"
                    style="color:#ffffff;padding:4px 7px 3px 5px;width:450px">
                    <span class="bodyBoldRev">\
                        Test Automation
                    </span>\
                </td>
            </tr>
            <tr>
                <td style="padding:5px;text-align:left">
                    <table width="100%">
                        <tr>
                            <td align="middle">
                                <w:PopupMenuItem action="$testCentalPage">\
                                    Test Central\
                                </w:PopupMenuItem>
                            </td>
                            <td align="middle">
                                <w:PopupMenuItem action="$testValidation">\
                                    Validation\
                                </w:PopupMenuItem>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr>
                <td>
                    <t:DataTable list="$testContextObjectList"
                                 hasChildren="$false"
                                 item="$currentItem">\
                        <t:Column label="Available objects">\
                            <a:String value="$getCurrentName"/>\
                        </t:Column>\
                    </t:DataTable>\
                </td>
            </tr>
        </table>
    </a:LazyDiv>
</w:PopupMenu>
</a:If>