    <Binding key="label" direction="get" type="String" required="$false">
        TBD
    </Binding>

    <Binding key="required" direction="get" type="boolean" default="$false">
        TBD
    </Binding>

    <Binding key="errorValueSource" direction="get" type="Object" default="$false">
