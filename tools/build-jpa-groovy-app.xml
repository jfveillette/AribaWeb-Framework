<project name="groovy-jpa-app" xmlns:artifact="antlib:org.apache.maven.artifact.ant">
    <description>
        Build file for apps depending on metaui-jpa (and metaui, widgets, aribaweb) ...

        Generates jar (and generates aribaweb.properties, if necessary)
        and war (and generates persistence.xml, web.xml, if necessary)
    </description>

    <property name="compile.groovy" value="true"/>
    <property name="aw.initializer" value="ariba.ui.groovy.AWGroovyLoader.initialize"/>

    <import file="build-jpa-app.xml"/>

    <!-- Must include demoshell for AWGroovyLoader rapid turnaround -->
    <fileset id="war.jars" dir="${build.jars.dir}">
        <include name="ariba.metaui-jpa.jar"/>
        <include name="ariba.demoshell.jar"/>
        <include name="${jar.name}"/>
    </fileset>

    <fileset id="module.libs2" dir="${lib-internal.dir}">
        <include name="groovy-all.jar"/>
    </fileset>

</project>
