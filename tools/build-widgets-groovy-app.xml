<project name="widgets-groovy-app" xmlns:artifact="antlib:org.apache.maven.artifact.ant">
    <description>
        Build file for apps depending on widgets (and aribaweb), but not metaui, ...
        and containg groovy source files

        Generates jar (and generates aribaweb.properties, if necessary)
        and war (and generates web.xml, if necessary)
    </description>

    <!-- aribaweb.properties: defaults  -->
    <property name="compile.groovy" value="true"/>
    <property name="aw.initializer" value="ariba.ui.groovy.AWGroovyLoader.initialize"/>

    <import file="build-widgets-app.xml"/>

    <!-- Need to include demoshell jar for AWGroovyLoader (class reloading) -->
    <fileset id="war.jars" dir="${build.jars.dir}">
        <include name="ariba.demoshell.jar"/>
        <include name="${jar.name}"/>
    </fileset>

    <fileset id="module.libs2" dir="${lib-internal.dir}">
        <include name="groovy-all.jar"/>
    </fileset>

</project>
